---
const title = "Driftly";

import background from "../assets/landing-001.webp";
import heroImage from "../assets/landscape-002-removebg.png";
---

<style>
  #hero-subtext {
    position: absolute;
    font-size: 50px;
    font-weight: bolder;
    color: rgba(255, 255, 255, 0.8);
    z-index: 20;
    top: 15%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    mix-blend-mode: luminosity;
  }
  #hero {

    z-index: 100;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    position: relative;
  }

  #hero img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: fill;
    z-index: 20;
    opacity: 0.9;
    bottom: 0;
  }

  #hero-text {
    position: absolute;
    font-size: 200px;
    font-weight: bolder;
    color: rgba(255, 255, 255, 0.8);
    z-index: 20;
    top: 25%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    mix-blend-mode: luminosity;
  }
  #container {
    width: 100%;
    height: 100vh;
    position: relative;
  }
  #navbar {
    margin-top: 0.25em;
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: space-between;
    padding-left: 50px;
    padding-right: 50px;
    padding-top: 20px;
    width: 100%;
    height: fit-content;
    position: fixed;
    top: 0;
    transition: all 0.5s ease-in-out;
    z-index: 300;
  }
  #navbar h1 {
    font-weight: bolder;
    font-size: 22px;
  }

  #navbar span {
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 16px;
  }

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  #cta {
    background: transparent;
    color: #f5f5f6;
    padding: 20px 40px;
    font-size: 18px;
    font-weight: bold;
    border: 2px solid #f5f5f6;
    border-radius: 15px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    position: absolute;
    bottom: 15%;
    z-index: 500;
}

#cta:hover {
    background: #f5f5f6;
    color: #000;
    transform: scale(1.1);
}

</style>


<main id="container">
  <img src={background.src} id="background"  alt="Background image"/>
  <nav id="navbar">
    <h1>{title}</h1>
    <span>
      <p id="about-btn">About us</p>
      <p><a href="#destinies-start"> Destinies </a></p>
      <p>Experiences</p>
      <p>Contact</p>
      <p>Blog</p>
    </span>
  </nav>
  <p id="hero-subtext">Start your</p>
  <h1 id="hero-text">Journey</h1>
  <section id="hero">
    <img src={heroImage.src} alt="Hero" />
    <button id="cta"> Book an experience</button>
  </section>
</main>

<script>
  const navbar = document.getElementById("navbar") as HTMLElement;

  window.addEventListener("scroll", () => {
    if (window.scrollY > 20) {
      navbar.style.width = "35%";
      navbar.style.paddingRight = "0px";
    } else {
      navbar.style.width = "100%";
      navbar.style.paddingRight = "50px";
    }
  });
</script>
