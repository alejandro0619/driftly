---
const destinations = [
  {
    name: "Hawaii",
    image: "/src/assets/hawaii.jpg", 
  },
  {
    name: "Sahara",
    image: "/src/assets/sahara.jpg", 
  },
  {
    name: "Osaka",
    image: "/src/assets/osaka.jpg", 
  },
  {
    name: "London",
    image: "/src/assets/landscape-006.jpg", 
  },
];
---

<style>
  .title {
    position: absolute;
    top: 10%;
    color: #fff;
    font-size: 20px;
    font-weight: bolder;
    text-align: start;
  }
  .destinies {
    width: 100%;
    height: 100vh;
    background-image: url("/src/assets/landscape-003.jpg"); 
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    transition: background-image 1s ease-in-out; 
    position: relative;
  }

  .destinies-overlay {
    width: 30%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6); 
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px;
    gap: 15px;
  }

  .destination-btn {
    background: transparent;
    color: #fff;
    font-size: 18px;
    font-weight: bold;
    padding: 10px 20px;
    border: 2px solid #fff;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    width: 200px;
  }

  .destination-btn:hover {
    background: #fff;
    color: #000;
    transform: scale(1.1); 
  }
  .destiny-name {
    font-size: 10vw; 
    font-weight: 900;
    position: absolute;
    bottom: 5%;
    right: 5%;

    text-transform: uppercase;
    background: linear-gradient(90deg, #ffffff, #eaeaea, #f9f9f9); 
    background-size: cover;
    background-position: center;
    -webkit-background-clip: text; 
    color: transparent; 
    text-align: center;

}
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btns = document.querySelectorAll(".destination-btn") as NodeListOf<HTMLButtonElement>;
    const destiniesContainer = document.getElementById("destinies-container") as HTMLDivElement;
    const destinyName = document.querySelector(".destiny-name") as HTMLParagraphElement;

    const destinations = [
      { name: "Hawaii", image: "/src/assets/hawaii.jpg" },
      { name: "Sahara", image: "/src/assets/sahara.jpg" },
      { name: "Osaka", image: "/src/assets/osaka.jpg" },
      { name: "London", image: "/src/assets/landscape-006.jpg" },
    ];

    btns.forEach((btn) => {
      btn.addEventListener("click", () => {
        const destinationName = btn.textContent?.trim();

        const destination = destinations.find(
          (dest) => dest.name === destinationName
        );

        if (destination) {
          
          destiniesContainer.style.backgroundImage = `url(${destination.image})`;
          
          destinyName.textContent = destination.name;
          
        }
      });
    });
  });
</script>

<div class="destinies" id="destinies-container">
  <div class="destinies-overlay">
    <h1 class="title">Choose your next journey</h1>


    {destinations.map((destination) => (
      <button class="destination-btn">{destination.name}</button>
    ))}
  </div>

  <p class="destiny-name">Sydney</p>
</div>
