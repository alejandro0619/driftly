---
const destinations = [
  {
    name: "Paris",
    image: "/src/assets/landscape-003.jpg", // Primera imagen
  },
  {
    name: "New York",
    image: "/src/assets/landscape-003.jpg", // Segunda imagen
  },
];
---

<style>
  .destinies {
    width: 100%;
    height: 100vh;
    background-image: url("/src/assets/landscape-003.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    transition: background-image 1s ease-in-out; /* Agregado para la transici√≥n */
    position: relative;
  }

  .destinies-overlay {
    width: 40%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6); /* Fondo opaco */
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 20px;
    gap: 15px;
  }

  .destination-btn {
    background: transparent;
    color: #fff;
    font-size: 18px;
    font-weight: bold;
    padding: 10px 20px;
    border: 2px solid #fff;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
  }

  .destination-btn:hover {
    background: #fff;
    color: #000;
    transform: scale(1.1); /* Agrandamiento en hover */
  }
</style>
<script>
  function changeBackground(event: any) {
    console.log("jskjdfsklfsdd")
    const destiniesContainer = document.getElementById('destinies-container') as HTMLDivElement;
    const destinationImage = event.target.textContent;  // Obtener el nombre del destino

    let imageUrl = '';
    if (destinationImage === 'Paris') {
      imageUrl = '/src/assets/landscape-003.jpg';
    } else if (destinationImage === 'New York') {
      imageUrl = '/src/assets/landscape-001.webp';
    }

    destiniesContainer.style.backgroundImage = `url(${imageUrl})`;
  }
</script>
<div class="destinies" id="destinies-container" data-background="Paris">
  <div class="destinies-overlay">
    {destinations.map((destination) => (
      <button 
        class="destination-btn"
        onclick={changeBackground(event)}>
        {destination.name}
      </button>
    ))}
  </div>
</div>


